---
layout: null
---
[
    {% assign md_pages = site.pages | where_exp: "item",
        "item.path contains 'md/'" | sort: "date" | reverse %
    }
  {% for post in md_pages %
    }
  {
        "title": {
            { post.name | replace: '.md', '' | jsonify
            }
        },
        "path": {
            { post.url | jsonify
            }
        },
        "date": {
            { post.date | default: post.modified_time | date: "%Y-%m-%d" | jsonify
            }
        },
        "category": {
            { post.category | default: 'Uncategorized' | jsonify
            }
        },
        "summary": {
            { post.summary | strip_html | strip_newlines | jsonify | default: '""'
            }
        }
    }{% unless forloop.last %
    },
    {% endunless %
    }
  {% endfor %
    }
]